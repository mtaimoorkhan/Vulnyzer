<?xml version="1.0"?>
<ruleset name="quickstart"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 https://pmd.sourceforge.io/ruleset_2_0_0.xsd">
    <description>qQuickstart configuration of PMD. Includes the rules that are most likely to apply everywhere.</description>
 <rule name="CWE-369 Divide By Zero"
      language="java"
      message="Divide By Zero"
      class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
    <description>Divide By Zero</description>
    <priority>1</priority>
    <properties>
        <property name="xpath">
            <value>
  //InfixExpression[@Operator=&apos;/&apos;]/*[2][@Image and not(number(@Image))]
            </value>
        </property>
    </properties>
</rule>
<rule name="CWE-335 Long Integer Violation"
      language="java"
      message="Long Integer Violation"
      class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
    <description>Long Integer Violation</description>
    <priority>1</priority>
    <properties>
        <property name="xpath">
            <value>
  //ExpressionStatement/MethodCall[@MethodName]/../..//UnaryExpression[@Operator=&apos;-&apos; and NumericLiteral[1][@Image and contains(@Image, &apos;L&apos;)]]
            </value>
        </property>
    </properties>
</rule>
<rule name="CWE-681 Incorrect Conversion between Numeric Types"
      language="java"
      message="Incorrect Conversion between Numeric Types"
      class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
    <description>Incorrect Conversion between Numeric Types</description>
    <priority>1</priority>
    <properties>
        <property name="xpath">
            <value>
  .//CastExpression[((.//PrimitiveType[@Kind=&apos;int&apos;] and /*[1][@Image]))]
            </value>
        </property>
    </properties>
</rule>

</ruleset>