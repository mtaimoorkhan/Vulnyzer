<?xml version="1.0"?>
<ruleset name="quickstart"
         xmlns="http://pmd.sourceforge.net/ruleset/2.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://pmd.sourceforge.net/ruleset/2.0.0 https://pmd.sourceforge.io/ruleset_2_0_0.xsd">
    <description>qQuickstart configuration of PMD. Includes the rules that are most likely to apply everywhere.</description>
 <rule name="CWE-335 Long Integer Violation"
      language="java"
      message="Long Integer Violation"
      class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
    <description>Long Integer Violation</description>
    <priority>1</priority>
    <properties>
        <property name="xpath">
            <value>
  //ExpressionStatement/MethodCall[@MethodName]/../..//UnaryExpression[@Operator=&apos;-&apos; and NumericLiteral[1][@Image and contains(@Image, &apos;L&apos;)]]
            </value>
        </property>
    </properties>
</rule>
<rule name="Invalid Variable Declaration"
      language="java"
      message="Invalid Variable Declaration"
      class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
    <description>Invalid Variable Declaration Do not Use bill as variable</description>
    <priority>1</priority>
    <properties>
        <property name="xpath">
            <value>
  //VariableId[@Name = &quot;bill&quot;]
            </value>
        </property>
    </properties>
</rule>
<rule name="CAPEC-250(XML Injection)"
      language="java"
      message="XML Injection detected Message"
      class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
    <description>XML Injection detected description</description>
    <priority>1</priority>
    <properties>
        <property name="xpath">
            <value>
  //StringLiteral[not(contains(@Image,&apos;&lt;&apos;) and contains(@Image,&apos;&gt;&apos;)) and contains(@Image,&apos;&lt;&apos;)]|//StringLiteral[not(contains(@Image,&apos;&lt;&apos;) and contains(@Image,&apos;&gt;&apos;)) and contains(@Image,&apos;&gt;&apos;)]|//StringLiteral[(contains(@Image,&apos;&lt;&apos;) and contains(@Image,&apos;&gt;&apos;)) and contains(@Image,&apos;&amp;&apos;)]
            </value>
        </property>
    </properties>
</rule>
<rule name="CWE-480 Use of Incorrect Operator"
      language="java"
      message="Use of Incorrect Operator"
      class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
    <description>Use of Incorrect Operator</description>
    <priority>1</priority>
    <properties>
        <property name="xpath">
            <value>
  .//WhileStatement/AssignmentExpression[@Operator=&apos;=&apos;] | .//IfStatement/AssignmentExpression[@Operator=&apos;=&apos;]
            </value>
        </property>
    </properties>
</rule>
<rule name="CWE-369 Divide By Zero"
      language="java"
      message="Divide By Zero"
      class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
    <description>Divide By Zero</description>
    <priority>1</priority>
    <properties>
        <property name="xpath">
            <value>
  //InfixExpression[@Operator=&apos;/&apos;]/*[2][@Image and not(number(@Image))]
            </value>
        </property>
    </properties>
</rule>
<rule name="CWE-681 Incorrect Conversion between Numeric Types"
      language="java"
      message="Incorrect Conversion between Numeric Types"
      class="net.sourceforge.pmd.lang.rule.xpath.XPathRule">
    <description>Incorrect Conversion between Numeric Types</description>
    <priority>1</priority>
    <properties>
        <property name="xpath">
            <value>
  .//CastExpression[((.//PrimitiveType[@Kind=&apos;int&apos;] and /*[1][@Image]))]
            </value>
        </property>
    </properties>
</rule>

</ruleset>